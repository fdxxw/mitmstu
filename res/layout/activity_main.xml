<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context="com.github.fdxxw.mitmstu.activity.MainActivity" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/topbar_bg" >

        <ImageView
            android:id="@+id/actionbar_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/actionbar_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/actionbar_logo"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="10.0dip" >
        
        <TextView
            android:id="@+id/main_open_protect_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="2.0dip"
            android:text="@string/enable_protection"
            android:textColor="#ffff5926"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_open_protect_head"
            android:layout_marginRight="80dp"
            android:gravity="bottom|left|center"
            android:text="@string/protection_tips"
            android:textColor="#ffffffff"
            android:textSize="14.0dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="12.0dip"
            android:padding="1.0dip" >

            <com.suke.widget.SwitchButton
            android:id="@+id/protect_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected" />
    <RelativeLayout
        android:id="@+id/hijack_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/main_hijack_history_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="2.0dip"
            android:text="@string/hijack_history_head"
            android:textColor="#ffff5926"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_hijack_history_head"
            android:layout_marginRight="80dp"
            android:gravity="bottom|left|center"
            android:text="@string/hijack_history_tips"
            android:textColor="#ffffffff"
            android:textSize="14.0dip" />

        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected" />
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/navigation">
	    <TextView
	            android:id="@+id/localhost_info"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="left"
	            android:paddingLeft="10dip"
	            android:paddingTop="10dip"
	            android:textColor="#ffffffff"
	            android:textSize="20sp" />
    </RelativeLayout>
    
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <Button android:id="@+id/scan_lan_btn"
	    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5.0dip"
            android:gravity="center"
            android:padding="14.0dip"
            android:text="扫描局域网主机"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:background="@drawable/shape"/>
    </RelativeLayout>

</LinearLayout>
